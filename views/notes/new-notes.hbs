{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}





<div class="col-sm-9 col-md-9 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo Paciente</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
            <div class="row col-md-12">
                <div class="form-group" class="col-md-4">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus />
                </div>
                <div class="col-md-1"></div>
                <div class="form-group" class="col-md-8">
                    <input type="text" name="apellidos" class="form-control" placeholder="Apellidos" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-7">
                    <input type="tel" name="telefono" class="form-control" pattern="[0-9]{9}"
                        title="Introduzca un número de teléfono válido" placeholder="Telefono de contacto">
                </div>
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control"
                    placeholder="Description o patologías del paciente"></textarea>
            </div>

        </div>
    </div>
    <div class="card text-center">
        <div class="card-header">
            <h3>Mediciones</h3>
        </div>
        <div class="card-body">
            <div class="row col-md-12">
                <div class="col-md-6">
                    <p>Nompre de la medción.</p>
                </div>
                <div class="col-md-6 col-md-offset-1 text-right">
                    <p>Hora estimada.</p>
                </div>
            </div>
            <div class="row col-md-12">
                <div class="form-group col-md-8">
                    <input type="text" name="nombreMedida" class="form-control" placeholder="(Opcional)" />
                </div>
                <div class="form-group col-md-4 col-md-offset-2">
                    <input type="time" name="hora" class="form-control" placeholder="Hora" />
                </div>
            </div>

        </div>
        <div class="row col-md-12">
            <div class="form-group col-md-12">
            <div class="col-md-6 col-md-offset-3">
                    <button class="btn btn-primary btn-block " type="submit">
                        Crear
                    </button>
                </div>
            </div>
        </div>
    </div>
    </form>
</div>